-- examples from decArith
red140 reduce '2.1'     ->  '2.1'
red141 reduce '-2.0'    ->  '-2'
red142 reduce '1.200'   ->  '1.2'
red143 reduce '-120'    ->  '-1.2E+2'
red144 reduce '120.00'  ->  '1.2E+2'
red145 reduce '0.00'    ->  '0'

-- Null test
red900 reduce  # -> ? Invalid_operation
